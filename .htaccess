# Security Headers for Static Build
<IfModule mod_headers.c>
    # Content Security Policy
    # Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com https://connect.facebook.net https://www.google.com https://www.gstatic.com https://formhub.izignamx.com https://forms.izignamx.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com data:; connect-src 'self' https://www.google-analytics.com https://www.google.com https://www.gstatic.com https://formhub.izignamx.com https://forms.izignamx.com; frame-src 'self' https://www.google.com https://www.gstatic.com https://formhub.izignamx.com https://forms.izignamx.com; form-action 'self' https://formhub.izignamx.com https://forms.izignamx.com; object-src 'none'; base-uri 'self'; report-uri https://izignamx.com/reports/csp-report.php; report-to csp-endpoint;"
    # Header always set Report-To "{"group":"csp-endpoint","max_age":10886400,"include_subdomains":true,"endpoints":[{"url":"https://izignamx.com/reports/csp-report.php"}]}"
    Header always set NEL "{"report_to":"csp-endpoint","max_age":10886400,"failure_fraction":0.25}"
    
    # Security Headers
    Header always set X-Frame-Options "DENY"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "camera=(), microphone=(), geolocation=(self), payment=(self), usb=()"
    
    # HSTS (solo en HTTPS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
    
    # Hide server info
    Header unset Server
    Header unset X-Powered-By
    Header always set X-Robots-Tag "index, follow"
</IfModule>

# Cache Control
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Deny access to sensitive files
<Files ".env*">
    Order allow,deny
    Deny from all
</Files>

<Files "*.map">
    Order allow,deny
    Deny from all
</Files>
